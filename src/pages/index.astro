---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<div class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 w-screen h-screen flex items-center justify-center p-8">
		<div class="max-w-4xl w-full">
			<!-- Main Content Container -->
			<div class="flex flex-col lg:flex-row items-center justify-center gap-12 lg:gap-16">
				
				<!-- Portrait Section -->
				<div class="flex-shrink-0">
					<div class="relative">
						<!-- Replace with your actual portrait image -->
						<div class="w-48 h-48 lg:w-72 lg:h-72 bg-gray-600 rounded-full border-4 border-gray-300 shadow-2xl overflow-hidden">
							<!-- Placeholder - replace src with your portrait -->
							<img 
								src="/portrait.jpg" 
								alt="Sawyer Czupka" 
								class="w-full h-full object-cover"
								onerror="this.style.display='none'; this.nextElementSibling.style.display='flex'"
							/>
							<!-- Fallback placeholder -->
							<div class="w-full h-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white text-4xl font-bold">
								SC
							</div>
						</div>
						<!-- Subtle glow effect -->
						<div class="absolute inset-0 rounded-full bg-blue-400 opacity-20 blur-xl -z-10 animate-pulse"></div>
					</div>
				</div>

				<!-- Content Section -->
				<div class="flex-1 text-center lg:text-left space-y-6 max-w-lg">
					<!-- Name -->
					<div>
						<h1 class="text-4xl lg:text-5xl font-bold text-white mb-2">
							Sawyer Czupka
						</h1>
						<div class="w-16 h-1 bg-gradient-to-r from-blue-400 to-purple-500 mx-auto lg:mx-0"></div>
					</div>

					<!-- Bio -->
					<p class="text-lg text-gray-300 leading-relaxed">
						William & Mary Computer Science & Data Science graduate passionate about machine learning, 
						software engineering, and building scalable systems. Experienced in developing 
						AI-powered applications and infrastructure automation.
					</p>

					<!-- Action Buttons -->
					<div class="flex flex-wrap gap-4 justify-center lg:justify-start pt-4">
						<!-- LinkedIn -->
						<a 
							href="https://www.linkedin.com/in/sawyerczupka/" 
							target="_blank"
							class="group flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition-all duration-200 shadow-lg hover:shadow-xl hover:scale-105"
						>
							<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
								<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
							</svg>
							LinkedIn
						</a>

						<!-- GitHub -->
						<a 
							href="https://github.com/sawyerczupka" 
							target="_blank"
							class="group flex items-center gap-2 bg-gray-700 hover:bg-gray-600 text-white px-6 py-3 rounded-lg font-medium transition-all duration-200 shadow-lg hover:shadow-xl hover:scale-105"
						>
							<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
